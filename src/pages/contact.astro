---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <section class="relative overflow-hidden bg-transparent">
    <div class="px-4 sm:px-6 pt-[max(20px,env(safe-area-inset-top))] pb-[max(28px,env(safe-area-inset-bottom))] max-w-5xl mx-auto">

      <!-- Back to Home -->
      <a 
        href="/" 
        class="inline-flex items-center text-sm font-medium text-pink-500 hover:text-pink-400 transition mb-6 block"
      >
        ← Back to Home
      </a>

      <!-- Hero -->
      <header class="text-center space-y-4 sm:space-y-6">
        <h1 class="text-3xl sm:text-5xl font-bold tracking-tight leading-tight sm:leading-tight">
          Let’s talk 
          <span class="relative">
            <span class="relative z-10 text-pink-500">ideas</span>
            <span class="absolute left-0 right-0 -bottom-2 h-[8px] sm:h-[10px] animate-scribble
                         bg-gradient-to-r from-pink-500 via-fuchsia-500 to-purple-500 rounded-full opacity-70"></span>
          </span>
        </h1>
        <p class="text-base sm:text-lg text-gray-400 max-w-2xl mx-auto px-1">
          Say hi, send a meme, or pitch a research collab.
          I check my inbox more than I check the fridge — and that’s saying something.
        </p>
      </header>

      <!-- Actions -->
      <div class="mt-10 sm:mt-14 grid grid-cols-1 sm:grid-cols-3 gap-3 sm:gap-4">
        <!-- Email -->
        <a href="mailto:shreyakundu.sk@gmail.com"
           class="group inline-flex items-center gap-3 rounded-xl px-4 py-4 sm:px-5 sm:py-4
                  bg-gray-900/40 border border-gray-800 hover:border-pink-500 hover:shadow-lg transition
                  backdrop-blur-sm">
          <span class="rounded-full p-2 sm:p-2.5 bg-pink-600/10 group-hover:bg-pink-600/20 transition">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-pink-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.8" d="M3 7l9 6 9-6M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </span>
          <span>
            <span class="font-semibold block">Email</span>
            <span class="text-sm text-gray-400 block break-all">shreyakundu.sk@gmail.com</span>
          </span>
        </a>

        <!-- LinkedIn -->
        <a href="https://www.linkedin.com/in/shreyak-risk-ai/" target="_blank" rel="noreferrer"
           class="group inline-flex items-center gap-3 rounded-xl px-4 py-4 sm:px-5 sm:py-4
                  bg-gray-900/40 border border-gray-800 hover:border-pink-500 hover:shadow-lg transition
                  backdrop-blur-sm">
          <span class="rounded-full p-2 sm:p-2.5 bg-purple-600/10 group-hover:bg-purple-600/20 transition">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-purple-400" viewBox="0 0 24 24" fill="currentColor">
              <path d="M4.98 3.5A2.5 2.5 0 112.5 6 2.5 2.5 0 014.98 3.5zM.5 8h4v12h-4zm7.5 0h3.8v1.9h.1c.5-.9 1.8-2.1 3.8-2.1 4 0 4.7 2.6 4.7 6V20h-4v-5.3c0-1.3 0-3-1.9-3s-2.2 1.4-2.2 2.9V20h-4z"/>
            </svg>
          </span>
          <span>
            <span class="font-semibold block">LinkedIn</span>
            <span class="text-sm text-gray-400 block break-all">linkedin.com/in/shreyak-risk-ai</span>
          </span>
        </a>

        <!-- GitHub -->
        <a href="https://github.com/shreyakundu" target="_blank" rel="noreferrer"
           class="group inline-flex items-center gap-3 rounded-xl px-4 py-4 sm:px-5 sm:py-4
                  bg-gray-900/40 border border-gray-800 hover:border-pink-500 hover:shadow-lg transition
                  backdrop-blur-sm">
          <span class="rounded-full p-2 sm:p-2.5 bg-gray-700/20 group-hover:bg-gray-600/30 transition">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-300" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 .5a12 12 0 00-3.8 23.4c.6.1.8-.3.8-.6v-2.1c-3.3.7-4-1.6-4-1.6-.5-1.2-1.2-1.6-1.2-1.6-1-.7.1-.7.1-.7 1.1.1 1.7 1.1 1.7 1.1 1 .1 1.6.1 1.6.1.8-1.5.3-2.6.2-2.8-2.6-.3-5.4-1.3-5.4-5.9 0-1.3.5-2.4 1.2-3.2-.1-.3-.5-1.5.1-3.1 0 0 1-.3 3.3 1.2a11.6 11.6 0 016 0c2.3-1.5 3.3-1.2 3.3-1.2.6 1.6.2 2.8.1 3.1.7.8 1.2 1.9 1.2 3.2 0 4.6-2.8 5.6-5.5 5.9.3.2.6.7.6 1.5v2.2c0 .3.2.7.8.6A12 12 0 0012 .5"/>
            </svg>
          </span>
          <span>
            <span class="font-semibold block">GitHub</span>
            <span class="text-sm text-gray-400 block break-all">github.com/shreyakundu</span>
          </span>
        </a>
      </div>

      <!-- Orbit -->
      <div class="mt-14 flex justify-center">
        <div class="relative w-[220px] h-[220px] sm:w-[260px] sm:h-[260px]">
          <div class="absolute inset-0 rounded-full motion-safe:animate-[spin_22s_linear_infinite]">
            <span class="absolute -top-3 left-1/2 -translate-x-1/2 w-6 h-6 rounded-full bg-pink-500 shadow-lg"></span>
            <span class="absolute -right-3 top-1/2 -translate-y-1/2 w-4 h-4 rounded-full bg-purple-500 shadow"></span>
            <span class="absolute -bottom-3 left-1/2 -translate-x-1/2 w-5 h-5 rounded-full bg-fuchsia-500 shadow"></span>
          </div>
          <div class="absolute inset-10 rounded-full motion-safe:animate-[spin_30s_linear_infinite_reverse]">
            <span class="absolute -left-2 top-1/3 w-3 h-3 rounded-full bg-pink-400"></span>
            <span class="absolute right-4 bottom-6 w-2.5 h-2.5 rounded-full bg-purple-400"></span>
          </div>

          <div class="absolute inset-0 flex items-center justify-center">
          <a 
            href="https://www.linkedin.com/in/shreyak-risk-ai/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm font-semibold px-3 py-1.5 rounded-full 
                   bg-gray-900/60 border border-pink-500/40 text-pink-400 
                   hover:bg-pink-500/20 hover:text-pink-300 transition"
          >
            Let’s connect
          </a>
        </div>


          </div>
        </div>
      </div>

      <p class="mt-6 text-sm text-gray-500 text-center">
        I usually reply within a day. If it’s urgent: <a href="mailto:shreyakundu.sk@gmail.com" class="underline decoration-dotted text-pink-400 hover:text-pink-300">email me</a>.
      </p>
    </div>
  </section>

  <style is:global>
    @keyframes scribble {
      0% { transform: scaleX(.95) translateY(0); opacity:.5 }
      50% { transform: scaleX(1.02) translateY(1px); opacity:.9 }
      100% { transform: scaleX(1) translateY(0); opacity:.7 }
    }
    .animate-scribble { animation: scribble 2.2s ease-in-out infinite; }
    @media (prefers-reduced-motion: reduce) {
      .animate-scribble { animation: none !important; }
    }
  </style>
</Layout>
